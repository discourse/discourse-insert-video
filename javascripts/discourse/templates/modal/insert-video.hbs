{{#d-modal-body title=(theme-prefix "modal.title") class="insert-video"}}
  <div class="insert-video-inputs video-sources">
    <label>
      {{theme-i18n "modal.video_title"}}
    </label>

    {{custom-simple-list
      values=sources
      hasVideoUploader=true
    }}
  </div>

  <div class="insert-video-inputs video-poster">
    <label>
      {{theme-i18n "modal.poster"}}
    </label>

    {{poster-uploader setPoster=(action "setPoster")}}
  </div>

  <div class="insert-video-inputs video-subtitles">
    <label>
      {{theme-i18n "modal.vtt_title"}}
    </label>

    {{custom-simple-list
      values=tracks
      hasVTTUploader=true
    }}
    <div class="desc">{{theme-i18n "modal.vtt_help"}}</div>
  </div>

  {{#if insertDisabled}}
    <div class="video-insert-error">
      {{validationMessage}}
    </div>
  {{/if}}
{{/d-modal-body}}

<div class="modal-footer">
  {{d-button class="btn-primary" disabled=insertDisabled label=(theme-prefix "modal.insert") action=(action "insert")}}
  {{d-button class="btn-danger" label=(theme-prefix "modal.cancel") action=(action "cancel")}}
</div>
